{
  "name": "server",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "tsdown",
    "check-types": "tsc -b",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
    "dev": "bun run --hot src/index.ts",
    "start": "bun run dist/index.js",
    "test": "vitest run --config vitest.config.ts",
    "test:watch": "vitest --config vitest.config.ts",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate"
  },
  "dependencies": {
    "@better-fetch/fetch": "^1.1.18",
    "@faker-js/faker": "^9.9.0",
    "@libsql/client": "^0.15.15",
    "@orpc/server": "^1.9.3",
    "better-auth": "^1.3.7",
    "better-near-auth": "^0.1.13",
    "dotenv": "^17.2.1",
    "drizzle-orm": "^0.44.6",
    "effect": "^3.17.9",
    "every-plugin": "link:every-plugin",
    "hono": "^4.9.2",
    "testcontainers": "^11.7.1"
  },
  "devDependencies": {
    "@curatedotfun/rss-plugin": "workspace:*",
    "@near-everything/marketplace-plugin": "link:@near-everything/marketplace-plugin",
    "@orpc/client": "^1.9.3",
    "@types/bun": "^1.2.20",
    "drizzle-kit": "^0.31.4",
    "tsdown": "^0.14.1",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
